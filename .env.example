# Configuration Base de Données
DB_URL=jdbc:mysql://localhost:3306/pariba?useSSL=false&serverTimezone=Africa/Bamako
DB_USERNAME=root
DB_PASSWORD=your_db_password

# Configuration JWT (Générer une clé sécurisée en base64)
# Pour générer: echo -n "votre-secret-tres-long-et-complexe" | base64
JWT_SECRET=bXktZGV2LXNlY3JldC1sb25nLXNlY3JldC1iYXNlNjQ=

# Configuration Email (Gmail App Password recommandé)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=votre-email@gmail.com
MAIL_PASSWORD=votre-mot-de-passe-app
MAIL_FROM=votre-email@gmail.com

# Configuration Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configuration Firebase (Notifications Push)
FIREBASE_CONFIG_FILE=firebase-adminsdk.json

# Répertoire de stockage des fichiers
FILE_UPLOAD_DIR=./uploads

# Port du serveur
PORT=8085

# IMPORTANT: Ne JAMAIS commiter le fichier .env avec vos vraies credentials
# Copier ce fichier en .env et remplir avec vos vraies valeurs
